<div class="container">
	<% flash.each do |key, value| %>
		<% next if key == "timedout" %>
		<% if key != "error" || key != "success" %>
			<% key = "info" %>
		<% end %>
		<div class=<%= "alert alert-#{key}" %>>
		  <button type="button" class="close" data-dismiss="alert">&times;</button>
		  <%= value %>
		</div>
	<% end %>
</div>